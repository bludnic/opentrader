{
  "name": "root",
  "private": true,
  "author": "bludnic",
  "license": "Apache-2.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "pro/*"
  ],
  "engines": {
    "node": "20.18.0"
  },
  "packageManager": "pnpm@9.12.0",
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@moonrepo/cli": "^1.28.3",
    "execa": "^9.3.1",
    "prettier": "^3.3.3",
    "ts-node": "10.9.2",
    "tsconfig-moon": "^1.3.0",
    "typescript": "5.5.4"
  },
  "scripts": {
    "dev": "moon run :dev",
    "build": "moon run :build",
    "lint": "moon run :lint",
    "lint:fix": "moon run :lint-fix",
    "typecheck": "moon run :typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "pnpm link --global",
    "release": "./scripts/release.mjs",
    "debug": "ts-node --transpile-only packages/cli/src/index.ts trade debug"
  },
  "bin": {
    "dev": "./bin/dev.sh",
    "cli": "./bin/cli.sh"
  }
}
