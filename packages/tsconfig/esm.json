{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TypeScript configuration using ESM",
  "compilerOptions": {
    "lib": ["es2023", "DOM"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  }
}
