{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Module",
  "extends": "./base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "es2021"
  }
}
